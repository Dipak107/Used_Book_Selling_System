<body>



    <!------ Include the above in your HEAD tag ---------->
    <!-- ======= Top Bar ======= -->
    <section id="topbar" class="d-none d-lg-block">
        <div class="container d-flex">
            <div class="contact-info mr-auto">
                <i class="icofont-envelope"></i>@Session["last_name"].ToString()
                <i class="icofont-phone"></i> @Session["city"]
            </div>
            <div class="social-links">
                <a href="#" class="twitter"><i class="icofont-twitter"></i></a>
                <a href="#" class="facebook"><i class="icofont-facebook"></i></a>
                <a href="#" class="instagram"><i class="icofont-instagram"></i></a>
                <a href="#" class="skype"><i class="icofont-skype"></i></a>
                <a href="#" class="linkedin"><i class="icofont-linkedin"></i></i></a>
            </div>
        </div>
    </section>


    <!-- ======= Header ======= -->
    <header id="header">
        <div class="container d-flex">

            <div class="logo mr-auto">
                <h1 class="text-primary"><a href="index.html">The Book Exchange</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav class="nav-menu d-none d-lg-block ">
                <ul>
                    <li class="active"><a href="@Url.Action("home","Home")">Home</a></li>
                    <li><a href="@Url.Action("about","Home")">About</a></li>

                    <li><a href="@Url.Action("portfolio","Home")">Books</a></li>


                    @if (Session["last_name"] != null)
                    {
                        <li><a href="@Url.Action("profile","Home")">Profile</a></li>
                        <li><a href="@Url.Action("logout","Home")">Logout</a></li>


                    }
                    else
                    {
                        <li><a href="@Url.Action("login","Home")">LogIn</a></li>
                        <li><a href="@Url.Action("register","Home")">Registration</a></li>
                    }


                    <li><a href="@Url.Action("contact","Home")">Contact</a></li>

                </ul>
            </nav><!-- .nav-menu -->

        </div>
    </header><!-- End Header -->

    <form method="post" action="@Url.Action("updateprofileindb","Home")">
        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="https://bootdey.com/img/Content/avatar/avatar7.png"><span class="font-weight-bold">@ViewBag.last_name</span><span class="text-black-50">@ViewBag.email</span><span> </span></div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Profile Settings</h4>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6"><label class="labels">First Name</label><input type="text" class="form-control" name="first_name" placeholder="first name" value="@ViewBag.first_name"></div>
                            <div class="col-md-6"><label class="labels">Last Name</label><input type="text" class="form-control" name="last_name" placeholder="last name" value="@ViewBag.last_name"></div>

                        </div>
                        <div class="row mt-3">

                            <div class="col-md-12"><label class="labels">City</label><input type="text" class="form-control" placeholder="enter city" name="city" value="@ViewBag.city"></div>
                            <div class="col-md-12"><label class="labels">State</label><input type="text" class="form-control" placeholder="enter state" name="state" value="@ViewBag.state"></div>
                            <div class="col-md-12"><label class="labels">Country</label><input type="text" class="form-control" placeholder="enter country" name="country" value="@ViewBag.country"></div>


                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels">Contact Number</label><input type="text" class="form-control" name="contact_no" placeholder="enter phone number" value="@ViewBag.contact_no"></div>
                            <div class="col-md-12"><label class="labels">Email ID</label><input type="text" class="form-control" placeholder="enter email id" name="email" value="@ViewBag.email"></div>
                            <div class="col-md-12"><label class="labels">Password</label><input type="password" class="form-control" placeholder="enter password" name="password"></div>
                            <div class="col-md-12"><label class="labels">Confirm Password</label><input type="password" class="form-control" placeholder="enter confirm password" name="confirmpassword"></div>
                        </div>
                        <input type="submit" value="Save Changes" class="btn-block btn-primary" />
                    </div>
                </div>

            </div>
        </div>
    </form>


    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">

            </div>
        </div>
    </section>

    <!-- ======= Header ======= -->
    <header id="header">
        <div class="container d-flex">

            <div class="logo mr-auto">
                <h1 class="text-primary"><a href="index.html">The Book Exchange</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav class="nav-menu d-none d-lg-block ">
                <ul>
                    <li class="active"><a href="@Url.Action("home","Home")">Home</a></li>
                    <li><a href="@Url.Action("about","Home")">About</a></li>

                    <li><a href="@Url.Action("portfolio","Home")">Books</a></li>


                    @if (Session["last_name"] != null)
                    {
                        <li><a href="@Url.Action("profile","Home")">Profile</a></li>
                        <li><a href="@Url.Action("logout","Home")">Logout</a></li>


                    }
                    else
                    {
                        <li><a href="@Url.Action("login","Home")">LogIn</a></li>
                        <li><a href="@Url.Action("register","Home")">Registration</a></li>
                    }


                    <li><a href="@Url.Action("contact","Home")">Contact</a></li>

                </ul>
            </nav><!-- .nav-menu -->

        </div>
    </header><!-- End Header -->
 
    @if (Model.Count==0)
    {
        <center><h2>Empty!!!!</h2></center>
    }


    @foreach (var item in Model)
    {

        var base64 = Convert.ToBase64String(item.image);
        var imgsrc = String.Format("data:image/jpg;base64,{0}", base64);


        <form method="post" action="@Url.Action("soldbook","Home")">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="tile">
                            <div class="wrapper">
                                <div class="header">@item.title</div>

                                <div class="banner-img img-fluid">
                                    <img src="@imgsrc" alt="Image 1">
                                </div>

                                <div class="dates">
                                    <div class="start">
                                        <strong>Book Price</strong>@item.price
                                        <span></span>
                                    </div>
                                    <div class="ends">
                                        <strong>Author</strong>@item.author
                                    </div>

                                </div>

                                <div class="stats">

                                    <div>
                                        <strong>Buyer Name</strong>  @item.seller_last_name
                                    </div>

                                    <div id="c">
                                        <strong>Buyer Contact:</strong> @item.seller_contact_no
                                    </div>

                                    <div>
                                        <input type="hidden" name="title" value="@item.title" />
                                        <input type="hidden" name="author" value="@item.author" />
                                        <label id="l">Quantity(sold)</label><input type="text" name="quantity" id="ll" required />
                                        <button type="submit" class="btn btn-primary">Sold</button>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
